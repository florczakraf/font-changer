{
    "manifest_version": 2,
    "name": "Font Changer",
    "version": "0.3.0",
    "description": "Find elements on the page and change their font with just few clicks.",
    "icons": {
        "48": "icons/font-changer-48.png",
        "64": "icons/font-changer-64.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "font-changer.js"
            ],
            "css": [
                "font-changer.css"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icons/font-changer-48.png",
        "default_title": "Font Changer"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab"
    ]
}
